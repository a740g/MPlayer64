$INCLUDEONCE

CONST __PATHNAME_FALSE%% = 0%%, __PATHNAME_TRUE%% = NOT __PATHNAME_FALSE

CONST PATHNAME_DIR_SEPARATOR_CODE_WIN~%% = 92~%%
CONST PATHNAME_DIR_SEPARATOR_CODE_NIX~%% = 47~%%

