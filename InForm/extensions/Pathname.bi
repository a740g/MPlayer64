    CONST PATHNAME_DIR_SEPARATOR = CHR$(PATHNAME_DIR_SEPARATOR_CODE)
$ELSE
    CONST PATHNAME_DIR_SEPARATOR_CODE~%% = PATHNAME_DIR_SEPARATOR_CODE_NIX
    CONST PATHNAME_DIR_SEPARATOR = CHR$(PATHNAME_DIR_SEPARATOR_CODE)
$END IF

CONST PATHNAME_DIR_CURRENT = "." + PATHNAME_DIR_SEPARATOR
CONST PATHNAME_DIR_PARENT = ".." + PATHNAME_DIR_SEPARATOR

CONST PATHNAME_EXT_SEPARATOR_CODE~%% = 46~%%
